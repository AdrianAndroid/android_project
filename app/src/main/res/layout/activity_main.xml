<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/onClickText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="onClick   " />

        <TextView
            android:id="@+id/onLongClickTextTrue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="onLongClickTrue   " />

        <TextView
            android:id="@+id/onLongClickTextFalse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="onLongClickFalse   " />

        <TextView
            android:id="@+id/onTouchEventTrue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="onTouchEventTrue   " />

        <TextView
            android:id="@+id/onTouchEventFalse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="onTouchEventFalse   " />
    </LinearLayout>

    <com.joyy.android_project.CustomFrameLayout
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:background="@android:color/holo_blue_bright"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.joyy.android_project.CustomView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@android:color/holo_green_light" />
    </com.joyy.android_project.CustomFrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>